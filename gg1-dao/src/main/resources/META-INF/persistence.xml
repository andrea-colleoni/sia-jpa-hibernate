<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="gg1-dao" transaction-type="RESOURCE_LOCAL">
		<class>jdbc.Persona</class>
		<class>jdbc.Indirizzo</class>
		<class>jdbc.Corso</class>
		<class>jdbc.Scuola</class>
		<class>jdbc.Materia</class>
		<class>jdbc.Automobile</class>
		<class>jdbc.ChiaveCitta</class>
		<class>jdbc.Citta</class>
		<class>jdbc.Cane</class>
		<class>jdbc.Animale</class>
		<class>jdbc.Gatto</class>
		<class>jdbc.CaneST</class>
		<class>jdbc.GattoST</class>
		<class>jdbc.AnimaleST</class>
		<class>jdbc.AnimaleJ</class>
		<class>jdbc.CaneJ</class>
		<class>jdbc.GattoJ</class>
		<class>jdbc.GattoTPC</class>
		<class>jdbc.CaneTPC</class>
		<class>jdbc.AnimaleTPC</class>
		<class>jdbc.EntitaRidotta</class>
		<class>jdbc.EntitaRidotta2</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/siajpa"/>
			<property name="javax.persistence.schema-generation.database.action" value="create"/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="hibernate.cache.use_second_level_cache" value="true"/>
			<property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.EhCacheRegionFactory"/>
			<property name="hibernate.cache.use_query_cache" value="true"/>
		</properties>
	</persistence-unit>
</persistence>
